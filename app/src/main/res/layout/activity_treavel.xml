<?xml version="1.0" encoding="utf-8"?>
<!--paling gede-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".treavelActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="280dp"
      android:src="@drawable/swiss"
      android:scaleType="centerCrop"
    />

<!--top-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <!--title-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          android:text="Campguard"
          android:textColor="@color/black"
          android:textSize="35dp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Kanderstag, Switzerland"
          android:textColor="@android:color/darker_gray"
          android:textSize="20dp" />

    </LinearLayout>
    <!--tittle and-->

<!--start-->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="32dp"
          android:layout_height="match_parent"
          android:background="@drawable/baseline_star_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="41"
          android:textColor="#494848"
          android:textSize="22dp"/>

    </LinearLayout>
<!--strat and-->

  </LinearLayout>
<!--and top-->

<!--  middle -->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginStart="40dp"
      android:layout_marginTop="30dp">

<!--call-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp">

      <ImageButton
          android:id="@+id/ibCall"
          android:layout_width="60dp"
          android:layout_height="60dp"

          android:background="@drawable/baseline_call_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CALL"
          android:textSize="25dp"
          android:textColor="#1976D2"/>

    </LinearLayout>

    <!--navigation-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">

      <ImageButton
          android:id="@+id/ibNavigate"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginStart="10dp"
          android:background="@drawable/baseline_navigation_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ROUTE"
          android:textSize="25dp"
          android:textColor="#1976D2"/>

    </LinearLayout>

<!--share-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">

      <ImageButton
          android:id="@+id/ibShare"
          android:layout_width="60dp"
          android:layout_height="60dp"

          android:background="@drawable/baseline_share_24" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SHARE"
          android:textSize="25dp"
          android:textColor="#1976D2"/>

    </LinearLayout>

<!--middle and-->

  </LinearLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="lorem"
    android:textColor="@color/black"
    android:textSize="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
</TextView>

</LinearLayout>

